<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HttpCaching</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @{
            (string, string)[] routes =
            {
                ("weather-no-cache", "No Cache"),
                ("weather-output-cache", "Output Cache"),
                ("weather-last-modified", "Last Modified"),
                ("weather-cache-control", "Cache Control"),
                ("weather-etag", "ETag"),
                ("weather-cache-control-plus-etag", "Cache Control + Etag"),
            };
            
            foreach (var (route, label) in routes)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@route">
                        <span class="bi bi-list-nested" aria-hidden="true"></span> @label
                    </NavLink>
                </div>
            }
        }

    </nav>
</div>
